{
  "compilerOptions": {
    "outDir": "./build",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
